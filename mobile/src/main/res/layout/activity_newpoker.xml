<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <!-- Linha 1 com uma coluna-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgNewCliente"
                        android:layout_width="81dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/information" />

                    <TextView
                        android:id="@+id/TextView000"
                        android:layout_height="match_parent"
                        android:layout_span="3"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="18dip"
                        android:text="NOVO JOGO"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@android:color/holo_green_light" />
                </TableRow>
                <!-- Linha 2 com 2 colunas -->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvNocli"
                        android:layout_width="88dp"
                        android:layout_height="50dp"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Jogo Nº"
                        android:textAppearance="@style/TextAppearance.Compat.Notification"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNumCli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="000"
                        android:textAppearance="@style/TextAppearance.Compat.Notification"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow>


                    <TextView
                        android:id="@+id/ldataprev"
                        android:layout_width="1dp"
                        android:layout_span="1"
                        android:text="Data :"
                        android:textAppearance="@style/TextAppearance.Compat.Notification" />

                    <TextView
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_span="6"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <requestFocus />

                    <ImageButton
                        android:id="@+id/btn_date"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:focusableInTouchMode="false"
                        android:onClick="onClickDATA"
                        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_width="fill_parent">


                    <TextView
                        android:id="@+id/lnomecli"

                        android:layout_width="78dp"
                        android:text="Descrição:"
                        android:textAppearance="@style/TextAppearance.Compat.Notification" />

                    <AutoCompleteTextView
                        android:id="@+id/namejogo"
                        android:layout_width="348dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_marginTop="0dp"
                        android:imeOptions="actionNext"
                        android:longClickable="false"
                        android:singleLine="true">

                    </AutoCompleteTextView>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:text="Entrada.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edvalorentrada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@+id/edqtdentrada"/>

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fichas.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edqtdentrada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:nextFocusDown="@+id/edvalorrebuy"/>

                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:text="Rebuy.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edvalorrebuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@+id/edqtdrebuy"/>

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fichas.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edqtdrebuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@+id/edvaloraddon" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:text="Addon.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edvaloraddon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@+id/edqtdaddon"/>

                        <TextView
                            android:id="@+id/lfone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fichas.:"
                            android:textAppearance="@style/TextAppearance.Compat.Notification" />

                        <EditText
                            android:id="@+id/edqtdaddon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/Tbutons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custombutton"
                    android:elevation="1dp"
                    android:onClick="onClickSAVE"
                    android:text="SALVAR" />

                <Button
                    android:id="@+id/btnCancelarnjogo"
                    android:layout_width="50dp"
                    android:background="@drawable/custombutton_cancel"
                    android:elevation="1dp"
                    android:text="Cancelar" />

            </TableRow>


        </TableLayout>
    </LinearLayout>

</LinearLayout>
