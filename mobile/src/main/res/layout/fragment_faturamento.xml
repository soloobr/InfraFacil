<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PecaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:orientation="horizontal"
            android:paddingStart="80dp"
            android:paddingEnd="80dp">

            <Button
                android:id="@+id/btnparc"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableStart="@mipmap/visa52"
                android:gravity="center"
                android:text="Parcelar"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textQTD"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="NÂº"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textdescri"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vencimento"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textSize="10sp" />

            <TextView
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Parc."
                android:textSize="10sp" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textvalor"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Valor R$"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textstatus"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Status"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/itemadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="Adicionar"
                android:src="@mipmap/addprod32"
                android:text="OK"
                android:visibility="gone" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="456dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleitemfaturamento"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#919090"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>