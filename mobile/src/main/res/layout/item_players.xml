<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/idplayer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/main_line_nome"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Descrição do Item"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/main_line_valor"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Rebuy: "
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/main_line_valorrebuy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/main_line_addon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=" Addon: "
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/main_line_valoraddon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#4CAF50" />

        <ImageButton
            android:id="@+id/btnrebuy"
            android:layout_width="39dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/money100" />

        <ImageButton
            android:id="@+id/bntaddon"
            android:layout_width="39dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/main_line_valortotal"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#4CAF50" />

    </LinearLayout>

</android.support.v7.widget.CardView>