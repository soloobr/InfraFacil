<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvdescriprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="Movimentação"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:dividerPadding="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alidplayer"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ID"
                android:textColor="@color/white2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alnomeplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome do Player"
                android:textColor="@color/white2"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvqtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center|left"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="number"
                android:text="Rebuy:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alqtdrebuy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_gravity="center|left"
                android:layout_weight="0"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:text="0"
                android:textAlignment="gravity"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btndeleterebuy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/round_button"
                    android:contentDescription="@string/nome"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingRight="3dp"
                    android:src="@drawable/down48" />

                <ImageButton
                    android:id="@+id/btnaddrebuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:background="@drawable/round_button"
                    android:contentDescription="@string/nome"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingRight="3dp"
                    android:src="@drawable/up48" />
            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvidforne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addon:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/aladdontrue"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:text="Não"
                android:textColor="@color/background_light"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alqtdaddon"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>